<p id="notice"><%= notice %></p>

<h1>Ideas</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>アイデア</th>
      <th>　</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td> </td>
        <!-- < %= idea.picture %> -->
        <td><%= link_to '詳細', idea %></td>
        <td><%= link_to '編集', edit_idea_path(idea) %></td>
        <td><%= link_to '削除', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

